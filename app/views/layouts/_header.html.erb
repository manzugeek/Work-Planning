<header>
    <nav class="py-2 bg-light border-bottom">
        <div class="container d-flex flex-wrap">
            <ul class="nav me-auto">
                <li class="nav-item"><a href="#" class="nav-link link-dark px-2 active" aria-current="page">Home</a></li>
                <li class="nav-item"><a href="#" class="nav-link link-dark px-2">About</a></li>
            </ul>
            <ul class="nav"> 
                <% if user_signed_in?  %>
                    <li class="nav-item">
                        <%= link_to current_user.name, current_user, class: "nav-link link-dark px-2" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Log out", destroy_user_session_path, 
                             method: :delete, data: { turbo_method: :delete }, class: "nav-link link-dark px-2" %>
                    </li> 
                <% else %>
                    <li class="nav-item">
                        <%= link_to "Login", new_user_session_path(@user), class: "nav-link link-dark px-2" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Sign up", new_user_registration_path(@user), class: "nav-link link-dark px-2" %>
                    </li>  
                <% end %>
            </ul>
        </div>
    </nav>
</header>

